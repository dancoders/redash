<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.redash.mapper.UserMapper">
    
    <resultMap id="baseResultMap" type="com.redash.entity.UserDO">
        <result column="id" property="id" jdbcType="INTEGER"></result>
        <result column="org_id" property="orgId" jdbcType="INTEGER"></result>
        <result column="groups" property="groups" typeHandler="com.redash.framework.handle.mybatis.ArrayTypeHandler"></result>
        <result column="name" property="name" jdbcType="VARCHAR"></result>
        <result column="email" property="email" jdbcType="VARCHAR"></result>
        <result column="profile_image_url" property="profileImageUrl" jdbcType="VARCHAR"></result>
        <result column="password_hash" property="passwordHash" jdbcType="VARCHAR"></result>
        <result column="api_key" property="apiKey" jdbcType="VARCHAR"></result>
        <result column="disabled_at" property="disabledAt" jdbcType="TIMESTAMP"></result>
        <result column="created_at" property="createdAt" jdbcType="TIMESTAMP"></result>
        <result column="updated_at" property="updatedAt" jdbcType="TIMESTAMP"></result>
        <result column="details" property="details" javaType="Object" typeHandler="com.redash.framework.handle.mybatis.JSONTypeHandler"></result>
    </resultMap>

    <select id="getById" parameterType="long" resultMap="baseResultMap">
        SELECT *
        FROM users
        WHERE id = #{id}
    </select>

    <select id="getByEmail" parameterType="string" resultType="com.redash.entity.UserDO">
        SELECT *
        FROM users
        WHERE email = #{email}
    </select>
    
    <select id="findUsersByCondition" parameterType="com.redash.queryvo.UserConditionVO" resultMap="baseResultMap">
        select * from users
    </select>

    <insert id="insert" parameterType="com.redash.entity.UserDO">
        INSERT INTO users(name, email, org_id, password_hash, groups, api_key, details, created_at, updated_at)
        VALUES (#{name}, #{email}, #{orgId}, #{passwordHash},
        #{groups,jdbcType=ARRAY, typeHandler=com.redash.framework.handle.mybatis.ArrayTypeHandler},
        #{apiKey}, #{details}, now(), now())
    </insert>
</mapper>